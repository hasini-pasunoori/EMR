                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Emergency</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="settings.html">Settings</a>
                    </li>
                </ul>
                
                <div class="auth-buttons ms-3">
                    <button class="btn btn-auth btn-signout">
                        <i class="fas fa-sign-out-alt me-1"></i> Sign Out
                    </button>
                </div>
                
                <div class="mobile-auth">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" href="#">Sign Out</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>

    <!-- Dashboard Layout -->
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-info">
                    <h4>John Doe</h4>
                    <p>New York, USA</p>
                </div>
            </div>
            
            <ul class="sidebar-menu">
                <li><a href="dashboard.html"><i class="fas fa-home"></i> Dashboard</a></li>
                <li><a href="map.html"><i class="fas fa-map-marker-alt"></i> Resources Map</a></li>
                <li><a href="emergency-contacts.html"><i class="fas fa-users"></i> Emergency Contacts</a></li>
                <li><a href="settings.html" class="active"><i class="fas fa-cog"></i> Settings</a></li>
                <li><a href="#"><i class="fas fa-heartbeat"></i> Medical Profile</a></li>
                <li><a href="#"><i class="fas fa-hand-holding-heart"></i> Donor Status</a></li>
                <li><a href="#"><i class="fas fa-history"></i> Recent Searches</a></li>
                <li><a href="#"><i class="fas fa-star"></i> Saved Locations</a></li>
            </ul>
            
            <div class="emergency-button">
                <button class="btn btn-emergency">
                    <i class="fas fa-plus-circle"></i> Emergency SOS
                </button>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="main-content">
            <div class="page-header">
                <h1 class="page-title">Settings</h1>
            </div>
            
            <!-- Account Settings -->
            <div class="settings-section">
                <h2 class="section-title"><i class="fas fa-user-cog"></i> Account Settings</h2>
                
                <div class="settings-card">
                    <form>
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label for="firstName" class="form-label">First Name</label>
                                <input type="text" class="form-control" id="firstName" value="John">
                            </div>
                            <div class="col-md-6">
                                <label for="lastName" class="form-label">Last Name</label>
                                <input type="text" class="form-control" id="lastName" value="Doe">
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="email" class="form-label">Email Address</label>
                            <input type="email" class="form-control" id="email" value="john.doe@example.com">
                        </div>
                        
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input type="tel" class="form-control" id="phone" value="+1 (555) 123-4567">
                        </div>
                        
                        <div class="mb-3">
                            <label for="location" class="form-label">Default Location</label>
                            <input type="text" class="form-control" id="location" value="New York, USA">
                        </div>
                        
                        <button type="submit" class="btn btn-save">Save Changes</button>
                    </form>
                </div>
            </div>
            
            <!-- Notification Settings -->
            <div class="settings-section">
                <h2 class="section-title"><i class="fas fa-bell"></i> Notification Settings</h2>
                
                <div class="settings-card">
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Emergency Alerts</h5>
                            <p class="mb-0 text-muted">Receive notifications about emergencies in your area</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Resource Availability</h5>
                            <p class="mb-0 text-muted">Get updates when medical resources become available</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Appointment Reminders</h5>
                            <p class="mb-0 text-muted">Receive reminders for your medical appointments</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox">
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Email Notifications</h5>
                            <p class="mb-0 text-muted">Receive important updates via email</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <button type="submit" class="btn btn-save">Save Preferences</button>
                </div>
            </div>
            
            <!-- Privacy & Security -->
            <div class="settings-section">
                <h2 class="section-title"><i class="fas fa-shield-alt"></i> Privacy & Security</h2>
                
                <div class="settings-card">
                    <div class="mb-3">
                        <label for="currentPassword" class="form-label">Current Password</label>
                        <input type="password" class="form-control" id="currentPassword">
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label for="newPassword" class="form-label">New Password</label>
                            <input type="password" class="form-control" id="newPassword">
                        </div>
                        <div class="col-md-6">
                            <label for="confirmPassword" class="form-label">Confirm New Password</label>
                            <input type="password" class="form-control" id="confirmPassword">
                        </div>
                    </div>
                    
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Two-Factor Authentication</h5>
                            <p class="mb-0 text-muted">Add an extra layer of security to your account</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox">
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Location Sharing</h5>
                            <p class="mb-0 text-muted">Allow sharing your location during emergencies</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Data Collection</h5>
                            <p class="mb-0 text-muted">Allow us to collect anonymous usage data to improve our services</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox">
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <button type="submit" class="btn btn-save">Update Security Settings</button>
                </div>
            </div>
            
            <!-- App Preferences -->
            <div class="settings-section">
                <h2 class="section-title"><i class="fas fa-sliders-h"></i> App Preferences</h2>
                
                <div class="settings-card">
                    <div class="mb-3">
                        <label for="language" class="form-label">Language</label>
                        <select class="form-control" id="language">
                            <option selected>English</option>
                            <option>Spanish</option>
                            <option>French</option>
                            <option>German</option>
                            <option>Chinese</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="distanceUnit" class="form-label">Distance Unit</label>
                        <select class="form-control" id="distanceUnit">
                            <option selected>Miles</option>
                            <option>Kilometers</option>
                        </select>
                    </div>
                    
                    <div class="mb-3">
                        <label for="theme" class="form-label">Theme</label>
                        <select class="form-control" id="theme">
                            <option selected>Dark (Default)</option>
                            <option>Light</option>
                            <option>Auto (System)</option>
                        </select>
                    </div>
                    
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Auto-Navigation</h5>
                            <p class="mb-0 text-muted">Automatically open directions in your preferred maps app</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Haptic Feedback</h5>
                            <p class="mb-0 text-muted">Enable vibration feedback for interactions</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <button type="submit" class="btn btn-save">Save Preferences</button>
                </div>
            </div>
            
            <!-- Emergency Settings -->
            <div class="settings-section">
                <h2 class="section-title"><i class="fas fa-exclamation-triangle"></i> Emergency Settings</h2>
                
                <div class="settings-card">
                    <div class="mb-3">
                        <label for="emergencyMessage" class="form-label">Emergency Message</label>
                        <textarea class="form-control" id="emergencyMessage" rows="3">I need emergency medical assistance. Please help! My location will be shared with this message.</textarea>
                        <div class="form-text">This message will be sent to your emergency contacts when you trigger an SOS alert</div>
                    </div>
                    
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Auto-Send Location</h5>
                            <p class="mb-0 text-muted">Automatically include your location in emergency alerts</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Emergency Sound</h5>
                            <p class="mb-0 text-muted">Play a loud sound when emergency mode is activated</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox" checked>
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <div class="mb-3 d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">Flash Alert</h5>
                            <p class="mb-0 text-muted">Flash your phone's LED during emergencies</p>
                        </div>
                        <label class="toggle-switch">
                            <input type="checkbox">
                            <span class="slider"></span>
                        </label>
                    </div>
                    
                    <button type="submit" class="btn btn-save">Save Emergency Settings</button>
                </div>
            </div>
            
            <!-- Account Management -->
            <div class="settings-section">
                <h2 class="section-title"><i class="fas fa-user-times"></i> Account Management</h2>
                
                <div class="settings-card">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Warning:</strong> These actions are irreversible. Please proceed with caution.
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button class="btn btn-outline-danger">
                            <i class="fas fa-file-download me-2"></i> Download Your Data
                        </button>
                        
                        <button class="btn btn-outline-warning">
                            <i class="fas fa-ban me-2"></i> Deactivate Account
                        </button>
                        
                        <button class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteAccountModal">
                            <i class="fas fa-trash-alt me-2"></i> Delete Account Permanently
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Delete Account Modal -->
    <div class="modal fade" id="deleteAccountModal" tabindex="-1" aria-labelledby="deleteAccountModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteAccountModalLabel">Delete Account</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        <strong>This action cannot be undone.</strong> All your data will be permanently deleted.
                    </div>
                    <p>Are you sure you want to delete your account? This will remove all your personal information, medical data, and emergency contacts from our system.</p>
                    <div class="mb-3">
                        <label for="deleteConfirm" class="form-label">Type "DELETE" to confirm</label>
                        <input type="text" class="form-control" id="deleteConfirm">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteButton" disabled>Delete My Account</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Settings page functionality
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize toggle switches
            const toggleSwitches = document.querySelectorAll('.toggle-switch input');
            toggleSwitches.forEach(toggle => {
                toggle.addEventListener('change', function() {
                    console.log('Toggle switched:', this.checked);
                    // Here you would save the preference to your backend
                });
            });
            
            // Form submission handlers
            const forms = document.querySelectorAll('form');
            forms.forEach(form => {
                form.addEventListener('submit', function(e) {
                    e.preventDefault();
                    // Simulate saving settings
                    const saveButton = this.querySelector('.btn-save');
                    const originalText = saveButton.innerHTML;
                    
                    saveButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
                    saveButton.disabled = true;
                    
                    setTimeout(() => {
                        saveButton.innerHTML = '<i class="fas fa-check"></i> Saved!';
                        setTimeout(() => {
                            saveButton.innerHTML = originalText;
                            saveButton.disabled = false;
                        }, 1500);
                    }, 1000);
                });
            });
            
            // Delete account confirmation
            const deleteConfirm = document.getElementById('deleteConfirm');
            const deleteButton = document.getElementById('confirmDeleteButton');
            
            if (deleteConfirm && deleteButton) {
                deleteConfirm.addEventListener('input', function() {
                    deleteButton.disabled = this.value !== 'DELETE';
                });
            }
        });
    </script>
</body>
</html>