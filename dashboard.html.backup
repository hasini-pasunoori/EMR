            </div>
        </div>
    </nav>

    <!-- Dashboard Layout -->
    <div class="dashboard-container">
        <!-- Sidebar -->
        <div class="sidebar">
            <div class="sidebar-header">
                <div class="user-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="user-info">
                    <h4>John Doe</h4>
                    <p>New York, USA</p>
                </div>
            </div>
            
            <ul class="sidebar-menu">
                <li><a href="dashboard.html" class="active"><i class="fas fa-home"></i> Dashboard</a></li>
                <li><a href="resource.html"><i class="fas fa-map-marker-alt"></i> Resources Map</a></li>
                <li><a href="#"><i class="fas fa-heartbeat"></i> Medical Profile</a></li>
                <li><a href="#"><i class="fas fa-hand-holding-heart"></i> Donor Status</a></li>
                <li><a href="#"><i class="fas fa-history"></i> Recent Searches</a></li>
                <li><a href="#"><i class="fas fa-star"></i> Saved Locations</a></li>
                <li><a href="#"><i class="fas fa-users"></i> Emergency Contacts</a></li>
                <li><a href="#"><i class="fas fa-cog"></i> Settings</a></li>
            </ul>
            
            <div class="emergency-button">
                <button class="btn btn-emergency">
                    <i class="fas fa-plus-circle"></i> Emergency SOS
                </button>
            </div>
        </div>
        
        <!-- Main Content -->
        <div class="main-content">
            <div class="page-header">
                <h1 class="page-title">Dashboard</h1>
                <div class="location-display">
                    <i class="fas fa-map-marker-alt me-2" style="color: var(--primary-red);"></i>
                    <span>Current Location: New York, USA</span>
                </div>
            </div>
            
            <div class="stats-grid">
                <div class="stat-card">
                    <div class="stat-icon">
