        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Leaflet JS -->
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    
    <script>
        // Initialize map
        function initMap() {
            // Create a map centered on New York
            const map = L.map('resource-map').setView([40.7128, -74.0060], 13);
            
            // Add a tile layer (map background)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
            
            // Add hospital markers
            const hospitals = [
                { lat: 40.7128, lng: -74.0060, name: "City General Hospital" },
                { lat: 40.7200, lng: -74.0100, name: "Downtown Medical Center" },
                { lat: 40.7050, lng: -74.0150, name: "Riverside Hospital" }
            ];
            
            hospitals.forEach(hospital => {
                L.marker([hospital.lat, hospital.lng])
                    .addTo(map)
                    .bindPopup(`<strong>${hospital.name}</strong><br>24/7 Emergency Department<br><button class="btn btn-sm btn-danger mt-2">Directions</button>`);
            });
            
            // Add pharmacy markers
            const pharmacies = [
                { lat: 40.7150, lng: -74.0080, name: "MedQuick Pharmacy" },
                { lat: 40.7180, lng: -74.0120, name: "HealthPlus Pharmacy" }
            ];
            
            pharmacies.forEach(pharmacy => {
                L.marker([pharmacy.lat, pharmacy.lng])
                    .addTo(map)
                    .bindPopup(`<strong>${pharmacy.name}</strong><br>Open until 10 PM<br><button class="btn btn-sm btn-primary mt-2">Directions</button>`);
            });
            
            // Add blood bank markers
            const bloodBanks = [
                { lat: 40.7100, lng: -74.0050, name: "Central Blood Bank" }
            ];
            
            bloodBanks.forEach(bank => {
                L.marker([bank.lat, bank.lng])
                    .addTo(map)
                    .bindPopup(`<strong>${bank.name}</strong><br>Open now<br><button class="btn btn-sm btn-danger mt-2">Directions</button>`);
            });
        }
        
        // Initialize the map when the page loads
        document.addEventListener('DOMContentLoaded', initMap);
    </script>
