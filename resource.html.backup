    <script>
        // Initialize map
        function initMap() {
            // Create a map centered on New York
            const map = L.map('resource-map').setView([40.7128, -74.0060], 13);
            
            // Add a tile layer (map background)
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
            
            // Custom icons
            const hospitalIcon = L.divIcon({
                className: 'map-marker-hospital',
                html: '<i class="fas fa-hospital"></i>',
                iconSize: [30, 30],
                iconAnchor: [15, 15]
            });
            
            const pharmacyIcon = L.divIcon({
                className: 'map-marker-pharmacy',
                html: '<i class="fas fa-pills"></i>',
                iconSize: [30, 30],
                iconAnchor: [15, 15]
            });
            
            const bloodIcon = L.divIcon({
                className: 'map-marker-blood',
                html: '<i class="fas fa-tint"></i>',
                iconSize: [30, 30],
                iconAnchor: [15, 15]
            });
            
            const ambulanceIcon = L.divIcon({
                className: 'map-marker-ambulance',
                html: '<i class="fas fa-ambulance"></i>',
                iconSize: [30, 30],
                iconAnchor: [15, 15]
            });
            
            // Add hospital markers
            const hospitals = [
                { lat: 40.7128, lng: -74.0060, name: "City General Hospital", address: "123 Medical Avenue", phone: "(555) 123-4567", beds: 12 },
                { lat: 40.7200, lng: -74.0100, name: "Downtown Medical Center", address: "456 Care Street", phone: "(555) 234-5678", beds: 8 },
                { lat: 40.7050, lng: -74.0150, name: "Riverside Hospital", address: "789 Health Road", phone: "(555) 345-6789", beds: 5 }
            ];
            
            hospitals.forEach(hospital => {
                L.marker([hospital.lat, hospital.lng], {icon: hospitalIcon})
                    .addTo(map)
                    .bindPopup(`
                        <strong>${hospital.name}</strong><br>
                        ${hospital.address}<br>
                        ${hospital.phone}<br>
                        ${hospital.beds} beds available<br>
                        <button class="btn btn-sm btn-danger mt-2 w-100">Get Directions</button>
                    `);
            });
            
