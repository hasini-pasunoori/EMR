    <style>
        :root {
            --primary-red: #e63946;
            --primary-blue: #457b9d;
            --bg-white: #f1faee;
            --dark-bg: #1d3557;
            --light-gray: #f8f9fa;
            --accent-orange: #f77f00;
            --accent-green: #2a9d8f;
            --glass-bg: rgba(255, 255, 255, 0.1);
            --glass-border: rgba(255, 255, 255, 0.2);
            --shadow-light: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
            --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --gradient-emergency: linear-gradient(135deg, #ff6b6b 0%, #ee5a24 100%);
            --gradient-medical: linear-gradient(135deg, #74b9ff 0%, #0984e3 100%);
            --gradient-success: linear-gradient(135deg, #00b894 0%, #00a085 100%);
            --neon-glow: 0 0 20px rgba(230, 57, 70, 0.6);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            overflow-x: hidden;
            background: #0a0a0a;
            color: white;
        }

        /* Smooth Scroll */
        html {
            scroll-behavior: smooth;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Poppins', sans-serif;
        }

        /* Navigation */
        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(10, 10, 10, 0.95);
            backdrop-filter: blur(20px);
            z-index: 1000;
            transition: all 0.3s ease;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .navbar-brand {
            font-family: 'Poppins', sans-serif;
            font-weight: 700;
            font-size: 1.5rem;
            color: var(--primary-red) !important;
            text-shadow: 0 0 10px rgba(230, 57, 70, 0.5);
        }

        .nav-link {
            color: rgba(255, 255, 255, 0.8) !important;
            font-weight: 500;
            margin: 0 1rem;
            position: relative;
            transition: all 0.3s ease;
        }

        .nav-link:hover {
            color: var(--primary-red) !important;
        }

        .nav-link::after {
            content: '';
            position: absolute;
            width: 0;
            height: 2px;
            bottom: -5px;
            left: 50%;
            background: var(--primary-red);
            transition: all 0.3s ease;
        }

        .nav-link:hover::after {
            width: 100%;
            left: 0;
        }

        .auth-buttons {
            display: flex;
            gap: 1rem;
        }

        .btn-auth {
            padding: 0.5rem 1.5rem;
            border-radius: 50px;
            font-weight: 600;
            transition: all 0.3s ease;
        }

        .btn-signin {
            background: transparent;
            border: 2px solid var(--primary-blue);
            color: var(--primary-blue);
        }

        .btn-signin:hover {
            background: var(--primary-blue);
            color: white;
        }

        .btn-signup {
            background: var(--gradient-emergency);
            border: none;
            color: white;
        }

        .btn-signup:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(230, 57, 70, 0.3);
        }

        /* Dashboard Layout */
        .dashboard-container {
            display: flex;
            min-height: 100vh;
            padding-top: 76px;
        }

        /* Sidebar */
        .sidebar {
            width: 280px;
            background: rgba(26, 26, 46, 0.95);
            backdrop-filter: blur(20px);
            border-right: 1px solid rgba(255, 255, 255, 0.1);
            padding: 2rem 1.5rem;
            height: calc(100vh - 76px);
            position: fixed;
            overflow-y: auto;
        }

        .sidebar-header {
            display: flex;
            align-items: center;
            margin-bottom: 2rem;
            padding-bottom: 1.5rem;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .user-avatar {
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background: var(--gradient-emergency);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-right: 1rem;
        }

        .user-info h4 {
            font-size: 1.1rem;
            margin-bottom: 0.2rem;
            color: white;
        }

        .user-info p {
            font-size: 0.85rem;
            color: rgba(255, 255, 255, 0.6);
            margin: 0;
        }

        .sidebar-menu {
            list-style: none;
            padding: 0;
        }

        .sidebar-menu li {
            margin-bottom: 0.5rem;
        }

        .sidebar-menu a {
            display: flex;
            align-items: center;
            padding: 0.8rem 1rem;
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .sidebar-menu a:hover, .sidebar-menu a.active {
            background: rgba(230, 57, 70, 0.1);
            color: var(--primary-red);
        }

        .sidebar-menu i {
            margin-right: 0.8rem;
            font-size: 1.2rem;
            width: 24px;
            text-align: center;
        }

        .emergency-button {
            margin-top: 2rem;
        }

        .btn-emergency {
            width: 100%;
            padding: 1rem;
            background: var(--gradient-emergency);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 600;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
        }

        .btn-emergency:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 20px rgba(230, 57, 70, 0.4);
        }

        .btn-emergency i {
            margin-right: 0.5rem;
        }

        /* Main Content */
        .main-content {
            flex: 1;
            padding: 2rem;
            margin-left: 280px;
        }

        .page-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .page-title {
            font-size: 2.2rem;
            font-weight: 700;
            background: linear-gradient(135deg, #fff 0%, var(--primary-red) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        /* Map Page Specific Styles */
        .map-controls {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
            flex-wrap: wrap;
        }

        .filter-group {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
        }

        .filter-btn {
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            color: rgba(255, 255, 255, 0.8);
            padding: 0.5rem 1rem;
            border-radius: 50px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            cursor: pointer;
        }

        .filter-btn:hover, .filter-btn.active {
            background: var(--primary-red);
            color: white;
        }

        .search-box {
            position: relative;
            flex: 1;
            max-width: 400px;
        }

        .search-box input {
            width: 100%;
            background: rgba(255, 255, 255, 0.05);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 50px;
            padding: 0.5rem 1rem 0.5rem 3rem;
            color: white;
        }

        .search-box i {
            position: absolute;
            left: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: rgba(255, 255, 255, 0.6);
        }

        .map-container {
            background: rgba(255, 255, 255, 0.02);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1.5rem;
            height: 600px;
            margin-bottom: 2rem;
        }

        #resource-map {
            width: 100%;
            height: 100%;
            border-radius: 10px;
            overflow: hidden;
        }

        .resources-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 1.5rem;
        }

        .resource-card {
            background: rgba(255, 255, 255, 0.02);
            backdrop-filter: blur(20px);
            border-radius: 15px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 1.5rem;
            transition: all 0.3s ease;
        }

        .resource-card:hover {
            background: rgba(255, 255, 255, 0.05);
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.2);
        }

        .resource-header {
            display: flex;
            align-items: center;
            margin-bottom: 1rem;
        }

        .resource-icon {
            width: 50px;
            height: 50px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.5rem;
            margin-right: 1rem;
            color: white;
        }

        .hospital-icon {
            background: var(--primary-red);
        }

        .pharmacy-icon {
            background: var(--primary-blue);
        }

        .blood-icon {
            background: #e63946;
        }

        .ambulance-icon {
            background: var(--accent-orange);
        }

        .resource-title {
            font-size: 1.2rem;
            font-weight: 600;
            margin-bottom: 0.2rem;
            color: white;
        }

        .resource-subtitle {
            font-size: 0.9rem;
            color: rgba(255, 255, 255, 0.6);
        }

        .resource-details {
            margin-bottom: 1.5rem;
        }

        .resource-detail {
            display: flex;
            align-items: center;
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }

        .resource-detail i {
            margin-right: 0.5rem;
            width: 16px;
            color: var(--primary-red);
        }

        .resource-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-resource {
            flex: 1;
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.9rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-direction {
            background: var(--primary-blue);
            color: white;
            border: none;
        }

        .btn-direction:hover {
            background: #3a6a8a;
        }

        .btn-call {
            background: transparent;
            border: 1px solid var(--primary-red);
            color: var(--primary-red);
        }

        .btn-call:hover {
            background: rgba(230, 57, 70, 0.1);
        }

        /* Leaflet Map Customization */
        .leaflet-container {
            background: #1a1a2e;
        }

        .leaflet-popup-content {
            color: #333;
        }

        .map-marker-hospital {
            background: var(--primary-red);
        }

        .map-marker-pharmacy {
            background: var(--primary-blue);
        }

        .map-marker-blood {
            background: #e63946;
        }

        .map-marker-ambulance {
            background: var(--accent-orange);
        }

        /* Mobile Responsiveness */
        @media (max-width: 992px) {
            .sidebar {
                width: 220px;
            }
            
            .main-content {
                margin-left: 220px;
            }
        }

        @media (max-width: 768px) {
            .dashboard-container {
                flex-direction: column;
            }
            
            .sidebar {
                width: 100%;
                height: auto;
                position: relative;
                margin-bottom: 1rem;
            }
            
            .main-content {
                margin-left: 0;
            }
            
            .auth-buttons {
                display: none;
            }
            
            .mobile-auth {
                display: block !important;
            }
            
            .map-controls {
                flex-direction: column;
            }
            
            .search-box {
                max-width: 100%;
            }
            
            .resources-grid {
                grid-template-columns: 1fr;
            }
        }

        .mobile-auth {
            display: none;
        }
    </style>
