                        <i class="fas fa-paper-plane me-2"></i>Submit Request
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <script>
        let userLocation = null;

        // Initialize dashboard
        document.addEventListener('DOMContentLoaded', function() {
            loadDashboardData();
            getUserLocation();
            initializeCharts();
        });

        // Get user location
        function getUserLocation() {
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(
                    (position) => {
                        userLocation = {
                            lat: position.coords.latitude,
                            lng: position.coords.longitude
                        };
                        loadLocationBasedData();
                    },
                    (error) => {
                        console.error('Error getting location:', error);
                    }
                );
            }
        }

        // Load dashboard data
        async function loadDashboardData() {
            try {
                // Load emergency statistics
                const statsResponse = await fetch('/api/emergency/stats/overview');
                const statsData = await statsResponse.json();
                
                if (statsData.success) {
                    document.getElementById('activeRequests').textContent = statsData.data.activeRequests;
                    document.getElementById('nearbyFacilities').textContent = statsData.data.activeFacilities;
                    document.getElementById('availableDonors').textContent = statsData.data.availableDonors;
                    document.getElementById('livesImpacted').textContent = statsData.data.fulfilledRequests;
                }

                // Load user's requests
                loadUserRequests();
                
                // Load donor profile
                loadDonorProfile();
                
            } catch (error) {
                console.error('Error loading dashboard data:', error);
            }
        }

        // Load location-based data
        async function loadLocationBasedData() {
            if (!userLocation) return;

            try {
                // Load nearby facilities count
                const facilitiesResponse = await fetch(`/api/facilities/nearby?lat=${userLocation.lat}&lng=${userLocation.lng}&maxDistance=10000`);
                const facilitiesData = await facilitiesResponse.json();
                
                if (facilitiesData.success) {
                    document.getElementById('nearbyFacilities').textContent = facilitiesData.count;
                }

                // Load nearby donors count
                const donorsResponse = await fetch(`/api/donors/nearby?lat=${userLocation.lat}&lng=${userLocation.lng}&maxDistance=25000`);
                const donorsData = await donorsResponse.json();
                
                if (donorsData.success) {
                    document.getElementById('availableDonors').textContent = donorsData.count;
                }
            } catch (error) {
                console.error('Error loading location-based data:', error);
            }
        }

        // Load user's emergency requests
        async function loadUserRequests() {
            try {
                const response = await fetch('/api/emergency/user/requests');
                const data = await response.json();
                
                if (data.success && data.data.length > 0) {
                    displayUserRequests(data.data);
                }
            } catch (error) {
                console.error('Error loading user requests:', error);
            }
        }

  
        function displayUserRequests(requests) {
            const container = document.getElementById('userRequests');
            let html = '';
            
            requests.forEach(request => {
                html += `
                    <div class="request-item">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <div>
                                <h5 class="mb-1">${request.title}</h5>
                                <span class="urgency-badge urgency-${request.urgency}">${request.urgency.toUpperCase()}</span>
                                <span class="status-badge status-${request.status} ms-2">${request.status.toUpperCase()}</span>
                            </div>
                            <small class="text-muted">${new Date(request.createdAt).toLocaleDateString()}</small>
                        </div>
                        
                        <p class="text-muted mb-2">${request.description}</p>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <small class="text-muted">
                                    <i class="fas fa-map-marker-alt me-1"></i>
                                    ${request.address.city}, ${request.address.state}
                                </small>
                            </div>
                            <div>
                                <span class="badge bg-primary">${request.responses.length} responses</span>
                            </div>
                        </div>
                    </div>
                `;
            });
            
            container.innerHTML = html;
        }

        // Load donor profile
        async function loadDonorProfile() {
            try {
                const response = await fetch('/api/donors/profile');
                const data = await response.json();
                
                if (data.success) {
                    displayDonorProfile(data.data);
                }
            } catch (error) {
                // User is not a donor yet, keep default message
                console.log('User is not registered as a donor');
            }
        }

        // Display donor profile
        function displayDonorProfile(donor) {
            const container = document.getElementById('donorProfile');
            
            const html = `
                <div class="donor-status">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5>
                            <i class="fas fa-tint me-2" style="color: var(--primary-red);"></i>
                            Blood Type: ${donor.bloodType}
                        </h5>
                        <span class="badge ${donor.availability.isAvailable ? 'bg-success' : 'bg-secondary'}">
                            ${donor.availability.isAvailable ? 'Available' : 'Not Available'}
                        </span>
                    </div>
                    
                    <div class="availability-toggle">
                        <div>
                            <strong>Available for Donation</strong>
                            <p class="text-muted mb-0">Toggle your availability for emergency requests</p>
                        </div>
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="availabilityToggle" 
                                   ${donor.availability.isAvailable ? 'checked' : ''} 
                                   onchange="toggleAvailability()">
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Age:</strong> ${donor.medicalInfo.age} years</p>
                            <p><strong>Weight:</strong> ${donor.medicalInfo.weight} kg</p>
                            <p><strong>Phone:</strong> ${donor.contact.phone}</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Location:</strong> ${donor.address.city}, ${donor.address.state}</p>
                            <p><strong>Last Donation:</strong> ${donor.availability.lastDonationDate ? 
                                new Date(donor.availability.lastDonationDate).toLocaleDateString() : 'Never'}</p>
                            <p><strong>Rating:</strong> 
                                <span class="text-warning">${'â˜…'.repeat(Math.floor(donor.rating.average))}</span>
                                (${donor.rating.totalRatings} reviews)
                            </p>
                        </div>
                    </div>
                    
                    <div class="mt-3">
                        <a href="/donor" class="btn btn-outline-primary">
                            <i class="fas fa-edit me-2"></i>Edit Profile
                        </a>
                    </div>
                </div>
            `;
            
            container.innerHTML = html;
        }

        // Toggle donor availability
        async function toggleAvailability() {
            const isAvailable = document.getElementById('availabilityToggle').checked;
            
            try {
                const response = await fetch('/api/donors/availability', {
                    method: 'PATCH',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ isAvailable })
                });

                const data = await response.json();
                
                if (data.success) {
                    showAlert('Availability status updated successfully!', 'success');
                } else {
                    showAlert('Error updating availability: ' + data.message, 'danger');
                    // Revert toggle
                    document.getElementById('availabilityToggle').checked = !isAvailable;
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Error updating availability. Please try again.', 'danger');
                // Revert toggle
                document.getElementById('availabilityToggle').checked = !isAvailable;
            }
        }

        // Show section
        function showSection(sectionName) {
            // Hide all sections
            document.querySelectorAll('.content-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // Remove active class from all nav links
            document.querySelectorAll('.nav-link').forEach(link => {
                link.classList.remove('active');
            });
            
            document.getElementById(sectionName).classList.add('active');

            event.target.classList.add('active');
        }

        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('show');
        }

        function createEmergencyRequest() {
            const modal = new bootstrap.Modal(document.getElementById('emergencyModal'));
            modal.show();
        }

        async function submitEmergencyRequest() {
            const form = document.getElementById('emergencyForm');
            const formData = new FormData(form);
            
            if (!userLocation) {
                showAlert('Location access is required for emergency requests.', 'danger');
                return;
            }

            const requestData = {
                type: formData.get('type'),
                urgency: formData.get('urgency'),
                title: formData.get('title'),
                description: formData.get('description'),
                location: {
                    type: 'Point',
                    coordinates: [userLocation.lng, userLocation.lat]
                },
                address: {
                    street: formData.get('address'),
                    city: 'Current Location',
                    state: 'Unknown',
                    zipCode: '00000'
                },
                patientInfo: {
                    name: formData.get('patientName'),
                    age: parseInt(formData.get('patientAge')),
                    gender: formData.get('patientGender'),
                    condition: formData.get('description')
                },
                contact: {
                    primaryPhone: formData.get('contactPhone'),
                    contactPerson: formData.get('contactPerson'),
                    relationship: 'Self'
                }
            };

            try {
                const response = await fetch('/api/emergency/request', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(requestData)
                });

                const data = await response.json();

                if (data.success) {
                    showAlert('Emergency request submitted successfully! Help is on the way.', 'success');
                    bootstrap.Modal.getInstance(document.getElementById('emergencyModal')).hide();
                    form.reset();
                    loadUserRequests(); 
                    loadDashboardData(); 
                } else {
                    showAlert('Error submitting request: ' + data.message, 'danger');
                }
            } catch (error) {
                console.error('Error:', error);
                showAlert('Error submitting emergency request. Please try again.', 'danger');
            }
        }

