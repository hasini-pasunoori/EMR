        async function activateUser(userId) {
            try {
                const response = await fetch(`/api/admin/users/${userId}/activate`, {
                    method: 'PATCH'
                });
                if (response.ok) {
                    loadUsers();
                    showAlert('User activated successfully', 'success');
                }
            } catch (error) {
                showAlert('Error activating user', 'danger');
