                    showAlert(`Donor ${isVerified ? 'verified' : 'unverified'} successfully`, 'success');
                }
            } catch (error) {
                showAlert('Error updating donor verification', 'danger');
            }
        }
        
        async function toggleDonorStatus(donorId, isActive) {
            try {
                const response = await fetch(`/api/admin/donors/${donorId}/status`, {
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ isActive })
                });
                if (response.ok) {
                    loadDonors();
                    showAlert(`Donor ${isActive ? 'activated' : 'deactivated'} successfully`, 'success');
                }
            } catch (error) {
                showAlert('Error updating donor status', 'danger');
            }
        }
        
        async function updateRequestStatus(requestId, status) {
            try {
                const response = await fetch(`/api/admin/requests/${requestId}/status`, {
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ status })
                });
                if (response.ok) {
                    loadRequests();
                    loadOverview();
                    showAlert('Request status updated successfully', 'success');
                }
            } catch (error) {
                showAlert('Error updating request status', 'danger');
            }
        }
        
        function showAddHospitalModal() {
            const modal = new bootstrap.Modal(document.getElementById('addHospitalModal'));
            modal.show();
        }
        
        async function submitHospital() {
            const form = document.getElementById('addHospitalForm');
            const formData = new FormData(form);
            
            // Get selected services
            const services = Array.from(form.querySelectorAll('input[name="services"]:checked')).map(cb => cb.value);
            
            const hospitalData = {
                name: formData.get('name'),
                contact: {
                    phone: formData.get('phone'),
                    email: formData.get('email'),
                    website: formData.get('website')
                },
                address: {
                    street: formData.get('street'),
                    city: formData.get('city'),
                    state: formData.get('state'),
                    zipCode: formData.get('zipCode')
                },
                capacity: {
                    totalBeds: parseInt(formData.get('totalBeds')) || 0,
                    availableBeds: parseInt(formData.get('availableBeds')) || 0
                },
                services: services,
                location: {
                    type: 'Point',
                    coordinates: [0, 0] // Will be geocoded later
                }
            };
            
            try {
                const response = await fetch('/api/admin/hospitals/add', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(hospitalData)
                });
                
                const result = await response.json();
                if (result.success) {
                    bootstrap.Modal.getInstance(document.getElementById('addHospitalModal')).hide();
                    form.reset();
                    loadHospitals();
                    loadOverview();
                    showAlert('Hospital added successfully', 'success');
                } else {
                    showAlert('Error adding hospital: ' + result.message, 'danger');
                }
            } catch (error) {
                showAlert('Error adding hospital', 'danger');
            }
        }
        
        async function exportUsers() {
            try {
                const response = await fetch('/api/admin/export/users?format=json');
                const data = await response.blob();
                
                const url = window.URL.createObjectURL(data);
                const a = document.createElement('a');
                a.href = url;
                a.download = `users-export-${new Date().toISOString().split('T')[0]}.json`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);
                
                showAlert('Users exported successfully', 'success');
            } catch (error) {
                showAlert('Error exporting users', 'danger');
            }
        }
        
        async function generateReport(type) {
            try {
                const response = await fetch(`/api/admin/export/${type}?format=json`);
                const data = await response.blob();
                
                const url = window.URL.createObjectURL(data);
                const a = document.createElement('a');
                a.href = url;
                a.download = `${type}-report-${new Date().toISOString().split('T')[0]}.json`;
                document.body.appendChild(a);
                a.click();
                window.URL.revokeObjectURL(url);
                document.body.removeChild(a);
                
                showAlert(`${type} report generated successfully`, 'success');
            } catch (error) {
                showAlert(`Error generating ${type} report`, 'danger');
            }
        }
        
        function showAlert(message, type) {
            const alertDiv = document.createElement('div');
            alertDiv.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            alertDiv.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
            alertDiv.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            document.body.appendChild(alertDiv);
            
            setTimeout(() => {
                alertDiv.remove();
            }, 5000);
        }

