        async function loadHospitals() {
            try {
                const response = await fetch('/api/admin/hospitals');
                const data = await response.json();
                
                if (data.success) {
                    const tbody = document.getElementById('hospitalsTable');
                    tbody.innerHTML = data.hospitals.map(hospital => `
                        <tr>
                            <td>${hospital.name}</td>
                            <td>${hospital.address.city}, ${hospital.address.state}</td>
                            <td>${hospital.capacity?.availableBeds || 0}/${hospital.capacity?.totalBeds || 0}</td>
                            <td><span class="badge ${hospital.status === 'active' ? 'bg-success' : 'bg-secondary'}">${hospital.status}</span></td>
                            <td><span class="badge ${hospital.isVerified ? 'bg-success' : 'bg-warning'}">${hospital.isVerified ? 'Verified' : 'Pending'}</span></td>
                            <td>
                                <button class="btn btn-sm btn-outline-primary" onclick="viewHospital('${hospital._id}')">View</button>
                                ${!hospital.isVerified ? `<button class="btn btn-sm btn-success" onclick="verifyHospital('${hospital._id}')">Verify</button>` : ''}
                            </td>
                        </tr>
                    `).join('');
                }
            } catch (error) {
                console.error('Error loading hospitals:', error);
            }
        }

        async function loadDonors() {
            try {
                const verified = document.getElementById('donorVerificationFilter')?.value;
                const bloodType = document.getElementById('donorBloodTypeFilter')?.value;
                const params = new URLSearchParams();
                if (verified) params.append('verified', verified);
                if (bloodType) params.append('bloodType', bloodType);
                
                const response = await fetch(`/api/admin/donors?${params}`);
                const data = await response.json();
                
                if (data.success) {
                    const tbody = document.getElementById('donorsTable');
                    tbody.innerHTML = data.data.map(donor => `
                        <tr>
                            <td>${donor.user?.name || 'N/A'}</td>
                            <td><span class="badge bg-danger">${donor.bloodType}</span></td>
                            <td>${donor.contact?.phone || 'N/A'}<br><small>${donor.user?.email || 'N/A'}</small></td>
                            <td>${donor.address?.city || 'N/A'}, ${donor.address?.state || 'N/A'}</td>
                            <td><span class="badge ${donor.verification?.isVerified ? 'bg-success' : 'bg-warning'}">${donor.verification?.isVerified ? 'Verified' : 'Unverified'}</span></td>
                            <td><span class="badge ${donor.isActive ? 'bg-success' : 'bg-secondary'}">${donor.isActive ? 'Active' : 'Inactive'}</span></td>
                            <td>
                                <div class="btn-group" role="group">
                                    <button class="btn btn-sm ${donor.verification?.isVerified ? 'btn-warning' : 'btn-success'}" 
                                            onclick="toggleDonorVerification('${donor._id}', ${!donor.verification?.isVerified})">
                                        ${donor.verification?.isVerified ? 'Unverify' : 'Verify'}
                                    </button>
                                    <button class="btn btn-sm ${donor.isActive ? 'btn-secondary' : 'btn-success'}" 
                                            onclick="toggleDonorStatus('${donor._id}', ${!donor.isActive})">
                                        ${donor.isActive ? 'Deactivate' : 'Activate'}
                                    </button>
                                </div>
                            </td>
                        </tr>
                    `).join('');
                }
            } catch (error) {
                console.error('Error loading donors:', error);
            }
        }
        
        async function loadRequests() {
            try {
                const status = document.getElementById('requestStatusFilter')?.value;
                const params = status ? `?status=${status}` : '';
                
                const response = await fetch(`/api/admin/requests${params}`);
                const data = await response.json();
                
                if (data.success) {
                    const tbody = document.getElementById('requestsTable');
                    tbody.innerHTML = data.data.map(req => `
                        <tr>
                            <td><span class="badge bg-primary">${req.type}</span></td>
                            <td>${req.requester?.name || 'N/A'}<br><small>${req.requester?.email || 'N/A'}</small></td>
                            <td><span class="badge bg-${req.urgency === 'critical' ? 'danger' : req.urgency === 'high' ? 'warning' : 'info'}">${req.urgency}</span></td>
                            <td>${req.description?.substring(0, 50)}...</td>
                            <td><span class="badge bg-${req.status === 'active' ? 'success' : 'secondary'}">${req.status}</span></td>
                            <td>${new Date(req.createdAt).toLocaleDateString()}</td>
                            <td>
                                <select class="form-select form-select-sm" onchange="updateRequestStatus('${req._id}', this.value)">
                                    <option value="active" ${req.status === 'active' ? 'selected' : ''}>Active</option>
                                    <option value="fulfilled" ${req.status === 'fulfilled' ? 'selected' : ''}>Fulfilled</option>
                                    <option value="cancelled" ${req.status === 'cancelled' ? 'selected' : ''}>Cancelled</option>
                                </select>
                            </td>
                        </tr>
                    `).join('');
                }
            } catch (error) {
                console.error('Error loading requests:', error);
            }
        }
        
        async function toggleDonorVerification(donorId, isVerified) {
            try {
                const response = await fetch(`/api/admin/donors/${donorId}/verify`, {
                    method: 'PATCH',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ isVerified })
                });
                if (response.ok) {
