    <!-- Donor Registration Page -->
    <div class="page-container">
        <div class="container">
            <div class="row mb-5">
                <div class="col-12 text-center">
                    <h1 class="section-title">Become a Donor</h1>
                    <p class="section-subtitle">Your donation can save lives. Register as a blood or organ donor today.</p>
                </div>
            </div>

            <!-- Donation Tabs -->
            <div class="row mb-5">
                <div class="col-12">
                    <ul class="nav nav-tabs" id="donorTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="blood-tab" data-bs-toggle="tab" data-bs-target="#blood" type="button" role="tab">Blood Donation</button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="organ-tab" data-bs-toggle="tab" data-bs-target="#organ" type="button" role="tab">Organ Donation</button>
                        </li>
                    </ul>
                    
                    <div class="tab-content" id="donorTabsContent">
                        <!-- Blood Donation Tab -->
                        <div class="tab-pane fade show active" id="blood" role="tabpanel">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="donor-form">
                                        <h3 class="mb-4">Blood Donor Registration</h3>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">First Name</label>
                                                    <input type="text" class="form-control" placeholder="Enter your first name">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">Last Name</label>
                                                    <input type="text" class="form-control" placeholder="Enter your last name">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">Date of Birth</label>
                                                    <input type="date" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">Blood Type</label>
                                                    <select class="form-select">
                                                        <option selected>Select your blood type</option>
                                                        <option>A+</option>
                                                        <option>A-</option>
                                                        <option>B+</option>
                                                        <option>B-</option>
                                                        <option>AB+</option>
                                                        <option>AB-</option>
                                                        <option>O+</option>
                                                        <option>O-</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">Email Address</label>
                                                    <input type="email" class="form-control" placeholder="Enter your email">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">Phone Number</label>
                                                    <input type="tel" class="form-control" placeholder="Enter your phone number">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label class="form-label">Address</label>
                                                    <input type="text" class="form-control" placeholder="Enter your address">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">City</label>
                                                    <input type="text" class="form-control" placeholder="Enter your city">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">ZIP Code</label>
                                                    <input type="text" class="form-control" placeholder="Enter your ZIP code">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="healthCheck">
                                                        <label class="form-check-label" for="healthCheck">
                                                            I confirm that I am in good health and meet the eligibility requirements for blood donation
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <button class="btn btn-submit">Register as Blood Donor</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="donation-stat">
                                        <div class="stat-number">4.5M</div>
                                        <div class="stat-label">Patients need blood each year</div>
                                    </div>
                                    <div class="donation-stat">
                                        <div class="stat-number">1 in 7</div>
                                        <div class="stat-label">Hospital patients need blood</div>
                                    </div>
                                    <div class="benefit-card">
                                        <div class="benefit-icon">
                                            <i class="fas fa-tint"></i>
                                        </div>
                                        <h4>Blood Donation Benefits</h4>
                                        <p>One donation can save up to three lives. The process is safe and takes less than an hour.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Organ Donation Tab -->
                        <div class="tab-pane fade" id="organ" role="tabpanel">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="donor-form">
                                        <h3 class="mb-4">Organ Donor Registration</h3>
                                        <div class="row">
                                            <div class="col-12 mb-4">
                                                <p>By registering as an organ donor, you can save up to 8 lives and enhance many others through tissue donation.</p>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">First Name</label>
                                                    <input type="text" class="form-control" placeholder="Enter your first name">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">Last Name</label>
                                                    <input type="text" class="form-control" placeholder="Enter your last name">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">Date of Birth</label>
                                                    <input type="date" class="form-control">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">State</label>
                                                    <select class="form-select">
                                                        <option selected>Select your state</option>
                                                        <option>California</option>
                                                        <option>New York</option>
                                                        <option>Texas</option>
                                                        <option>Florida</option>
                                                        <!-- More states would be added -->
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">Email Address</label>
                                                    <input type="email" class="form-control" placeholder="Enter your email">
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="form-label">Phone Number</label>
                                                    <input type="tel" class="form-control" placeholder="Enter your phone number">
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <label class="form-label">Which organs would you like to donate?</label>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="heartCheck">
                                                        <label class="form-check-label" for="heartCheck">Heart</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="liverCheck">
                                                        <label class="form-check-label" for="liverCheck">Liver</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="kidneysCheck">
                                                        <label class="form-check-label" for="kidneysCheck">Kidneys</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="lungsCheck">
                                                        <label class="form-check-label" for="lungsCheck">Lungs</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="pancreasCheck">
                                                        <label class="form-check-label" for="pancreasCheck">Pancreas</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="intestinesCheck">
                                                        <label class="form-check-label" for="intestinesCheck">Intestines</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="tissuesCheck">
                                                        <label class="form-check-label" for="tissuesCheck">Tissues</label>
                                                    </div>
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="allCheck">
                                                        <label class="form-check-label" for="allCheck">All organs and tissues</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <div class="form-group">
                                                    <div class="form-check">
                                                        <input class="form-check-input" type="checkbox" id="consentCheck">
                                                        <label class="form-check-label" for="consentCheck">
                                                            I give consent for my organs to be donated in the event of my death
                                                        </label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12">
                                                <button class="btn btn-submit">Register as Organ Donor</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="donation-stat">
                                        <div class="stat-number">107,000+</div>
                                        <div class="stat-label">People waiting for transplants</div>
                                    </div>
                                    <div class="donation-stat">
                                        <div class="stat-number">17</div>
                                        <div class="stat-label">People die daily waiting for an organ</div>
                                    </div>
                                    <div class="benefit-card">
                                        <div class="benefit-icon">
                                            <i class="fas fa-heart"></i>
                                        </div>
                                        <h4>Organ Donation Impact</h4>
                                        <p>One organ donor can save up to 8 lives and a tissue donor can enhance the lives of up to 75 people.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Donation Centers -->
            <div class="row">
                <div class="col-12">
                    <h2 class="mb-4" style="color: white;">Nearby Donation Centers</h2>
                </div>
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="glass-card">
